alias lg='lazygit'
alias zen='zen-browser'
alias v='nvim'
alias here='nohup nautilus . &> /dev/null &'
alias yee='yeelight-cli'
alias yt='pipe-viewer'
alias cd='j'
alias fcd='ji'
alias zel='zellij'
alias uam='_uam(){ local port=$1; local env=$2; if [ -n "$env" ]; then pio run -t upload -t monitor --upload-port /dev/ttyACM$port --monitor-port /dev/ttyACM$port -e $env; else pio run -t upload -t monitor --upload-port /dev/ttyACM$port --monitor-port /dev/ttyACM$port; fi; }; _uam'
alias monitor='_m(){ pio run -t monitor --monitor-port /dev/ttyACM$1; }; _m'
alias notes='cd ~/notes/ && v .'
alias config='cd ~/.config/ && v .'
